<style>
  .hero__inner {
    {% assign alpha = section.settings.trancparency_percent| plus:0 %}
    background-color:{{ section.settings.overlay_transparence | color_modify: 'alpha', alpha }};
  }
  .hero__inner .mega-title, .hero__inner .mega-subtitle{ color: #ffffff; }
  .hero-text-wrap {background-color: rgba(102,104,101,0.6); padding: 30px;max-width: 990px;margin: 0 auto;width:95%;}
   .template-index.mega-subtitle {max-width: none;}
  ..hero__inner a.btn {box-shadow: 5px 10px 18px #494646;}
  @media only screen and (min-width: 750px) {
  	.template-index .hero--x-large {height: 950px !important;}
  }
 .template-index .hero__inner {
    position: absolute;
    top: 140px;

  }
  @media only screen and (max-width: 487px) {
  .template-index .hero__inner {
    top: 20px;

  }
  .template-index .hero__inner .mega-title {
    font-size: 1em;

  }
   .template-index .hero__inner .mega-subtitle {
     font-size: 1em;
   }
   .template-index .hero-text-wrap {
     padding: 15px 10px;
   }
   .template-index .hero__inner .mega-subtitle {
     margin: 0;
   }
   .template-index .hero__inner .btn {
     margin: 8px auto;
    padding: 5px 7px;
    font-size: 12px;
   }
	  .template-index .hero--x-large {
		 /* height: 800px;*/
	  }
  }


</style>

<div class="hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %} box ratio-container lazyload js"
     {% if section.settings.image %}
     data-bgset="{% include 'bgset', image: section.settings.image %}"
     data-sizes="auto"
     data-parent-fit="cover"
     style="background-position: {{ section.settings.alignment }}; background-image: url('{{ section.settings.image | img_url: '1200x1200' }});"
     {% endif %}>
     <img src="{{ section.settings.image | img_url: '1000x1000' }}" style="opacity:0;visibility:hidden;width:auto;height:100%;position:relative;" alt="">
  {% if section.settings.image == blank %}
    <div class="placeholder-background">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {% endif %}
  <div class="hero__inner">
    <div class=" text-center hero-text-wrap">
      {% if section.settings.title != blank %}
        <h2 class="h1 mega-title{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">{{ section.settings.title | escape }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="rte-setting mega-subtitle{% if section.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">{{ section.settings.text }}</div>
      {% endif %}
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn " style="margin:20px auto;">
          {{ section.settings.button_label | escape }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<noscript>
  <div class="hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %}"{% if section.settings.image %} style="background-image: url('{{ section.settings.image | img_url: '2048x' }}'); background-position: center {{ section.settings.alignment }};"{% endif %}></div>
</noscript>
