
<style type="text/css">
	.right-menu li{ background-color: {{settings.color_button}}; color:#FFF; }
	.right-menu li a{  color:#FFF; }
</style>

<div class="small--hide right-menu" style="display: inline-block;">
<ul class="site-nav list--inline text-right" id="SiteNav">
  {% for link in linklists[section.settings.side_linklist].links %}

      <li{% if link.active %} class="site-nav--active"{% endif %}>
        <a href="{{ link.url }}" class="site-nav__link site-nav__link--main"{% if link.active %} aria-current="page"{% endif %} style="padding:10px 21px;">{{ link.title }}</a>
      </li>
    {% endfor %}
</ul>
</div>


<form action="/search" method="get" class="search-header search" role="search" style="display: inline-block;">
  <input class="search-header__input search__input"
    type="search"
    name="q"
    placeholder="{{ 'general.search.placeholder' | t }}"
    aria-label="{{ 'general.search.placeholder' | t }}">
  <button class="search-header__submit search__submit btn--link" type="submit">
    {% include 'icon-search' %}
    <span class="icon__fallback-text">{{ 'general.search.submit' | t }}</span>
  </button>
</form>
