<div class="page-width" data-block-id="{{ block.id }}" data-block-type="quotes">
  {% if block.settings.title != blank %}
    <div class="block-header text-center">
      <h2>{{ block.settings.title | escape }}</h2>
    </div>
  {% endif %}


	{% if block.settings.image_1 != blank %}
      <div class="grid">
          <div class="grid__item one-quarter">
            <img src={{block.settings.image_1| img_url:'medium'}} />
          </div>

          <div class="grid__item three-quarters">
              <blockquote class="quotes-slider__text text-center">
                <span class="quote-icon">{% include 'icon-quote' %}</span>
                {% if block.settings.quote_1 != blank %}
                  <div class="rte-setting">{{ block.settings.quote_1 }}</div>
                {% endif %}
                {% if block.settings.author_1 != blank %}
                  <cite>{{ block.settings.author_1 | escape }}</cite>
                {% endif %}
              </blockquote>
          </div>
  		</div>
  	{%endif%}

	{% if block.settings.image_2 != blank %}
      <div class="grid">
          <div class="grid__item one-quarter">
            <img src={{block.settings.image_2| img_url:'medium'}} />
          </div>

          <div class="grid__item three-quarters">
              <blockquote class="quotes-slider__text text-center">
                <span class="quote-icon">{% include 'icon-quote' %}</span>
                {% if block.settings.quote_2 != blank %}
                  <div class="rte-setting">{{ block.settings.quote_2 }}</div>
                {% endif %}
                {% if block.settings.author_2 != blank %}
                  <cite>{{ block.settings.author_2 | escape }}</cite>
                {% endif %}
              </blockquote>
          </div>
  		</div>
  	{%endif%}
  

	{% if block.settings.image_3 != blank %}
      <div class="grid">
          <div class="grid__item one-quarter">
            <img src={{block.settings.image_3| img_url:'medium'}} />
          </div>

          <div class="grid__item three-quarters">
              <blockquote class="quotes-slider__text text-center">
                <span class="quote-icon">{% include 'icon-quote' %}</span>
                {% if block.settings.quote_3 != blank %}
                  <div class="rte-setting">{{ block.settings.quote_3 }}</div>
                {% endif %}
                {% if block.settings.author_3 != blank %}
                  <cite>{{ block.settings.author_3 | escape }}</cite>
                {% endif %}
              </blockquote>
          </div>
  		</div>
  	{%endif%}  
  
</div>