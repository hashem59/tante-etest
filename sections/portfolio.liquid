<div class="">
    <div class="">
      {% for block in section.blocks %}
        <div class="{% if block.type == 'logo_bar'%} index-section{%endif%}" {{ block.shopify_attributes }}>
          {% case block.type %}
            {% when 'hero' %}

          		{%include 'hero-section'  %}

            {% when 'featuredproduct' %}
          		{% include 'featured-product-section'%}

            {% when 'actionbutton' %}
          		{% include 'action-button-section'%}

            {% when 'image_with_text' %}
          		{% include 'featured-row-section'%}


            {% when 'logo_bar' %}
          		{% include 'logo-bar-section'%}


            {% when 'blank_space' %}
          		{% include 'blank-space-section'%}


             {% endcase %}
        </div>
      {% endfor %}
  </div>
</div>



