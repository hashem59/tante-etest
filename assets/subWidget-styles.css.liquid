.box-wrapper {
  display: inline-block;
  cursor: pointer;
  position: relative;
  padding-left: 25px;
  margin-right: 15px;
  /*font-size: 13px;*/
  padding-top: 50px;
  
}

input[type=checkbox], input[type=radio] {
  display: none !important;
}

.rounded-checkbox:before
{
  content: "";
  display: inline-block;
 
  width: 35px;
  height: 35px;
 
  margin-right: 10px;
  position: absolute;
  left: 0;
  bottom: 1px;
   border: 2px solid #f13b62; 
  border-radius: 50em;
}

input[type=checkbox]:checked + .rounded-checkbox:before ,
input[type=radio]:checked + .rounded-checkbox:before 
{
    background-color: #f13b62;
   border: 2px solid #f13b62; 
    font-size: 30px;
    text-align: center;
    line-height: 18px;
}

.option +input[type=radio]:checked { background-color: #FFF; }

 label:hover  .rounded-checkbox:before 
{
    /*background-color: #f13b62;*/
    font-size: 30px;
    text-align: center;
    line-height: 18px;
   border: 2px solid #f13b62; 

}


